<h1>All students</h1>

<% if @students.any? %>
	<% @students.each do |student| %>
		<%= link_to "#{student.first_name} #{student.surname}", admin_student_path(student) %> | 
		<%= link_to "Edit", edit_admin_student_path(student) %>
		<br>
	<% end %>
<% else %>
	<p>There is still no students in database!</p>
<% end %><br>

<%= link_to "Добавить студента", new_admin_student_path, class: 'btn btn-success' %>