<!DOCTYPE html>
<html>
  <head>
    <title>AdministratorCabinet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar- bg-dark text-light">
      <a class="navbar-brand" href="/admin/students">Attractor school</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
           <%= link_to 'Students', class: 'nav-link' %>
         </li>
          <li class="nav-item active">
           <%= link_to 'Teachers', class: 'nav-link' %>
         </li>
         <li class="nav-item active">
          <%= link_to 'Teachers', class: 'nav-link' %>
        </li>
         <li class="nav-item active">
